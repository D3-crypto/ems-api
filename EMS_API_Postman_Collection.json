{
  "info": {
    "name": "EMS API Collection",
    "description": "Sample Postman collection for Employee Management System API.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_name\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPass123\",\n  \"reEnterPassword\": \"TestPass123\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/signup/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "signup"]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/verify-otp/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "verify-otp"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPass123\",\n  \"deviceType\": \"web\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/login/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "login"]
        }
      }
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/forgot-password/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "forgot-password"]
        }
      }
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer <your_access_token>" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"otp\": \"123456\",\n  \"new_password\": \"NewPass123\",\n  \"confirm_password\": \"NewPass123\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/reset-password/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "reset-password"]
        }
      },
      "description": "Requires login. If you have logged out, you must log in again before resetting password."
    },
    {
      "name": "Punch In",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer <your_access_token>" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"location\": \"Office Building, Mumbai\",\n  \"latitude\": \"19.0760\",\n  \"longitude\": \"72.8777\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/employee/punch-in/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "employee", "punch-in"]
        }
      },
      "description": "Requires login. If you have logged out, you must log in again before punching in."
    },
    {
      "name": "Punch Out",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer <your_access_token>" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"location\": \"Office Building, Mumbai\",\n  \"latitude\": \"19.0760\",\n  \"longitude\": \"72.8777\"\n}"
